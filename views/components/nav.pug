-
    let nav = [
        {
            name: "Home",
            url: "/"
        },
        {
            name: "Multiplayer Vs",
            url: "/vs"
        },
        {
            name: "Leaderboards",
            url: "/leaderboard"
        },
    ];

nav.navbar.navbar-expand-md.navbar-dark.bg-dark.text-white.border-bottom
    .container-fluid
        a.navbar-brand(href='#') Tetris
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
            span.navbar-toggler-icon
        #navbarNavAltMarkup.collapse.navbar-collapse
            ul.navbar-nav.me-auto.mb-2.mb-sm-0
                each link in nav 
                    if (link.url == currentPage)
                        li.nav-item
                            a.nav-link.active(aria-current='page' href=link.url)= link.name
                    else
                        li.nav-item
                            a.nav-link(aria-current='page' href=link.url)= link.name
            ul.navbar-nav.mb-2.mb-sm-0
                li.nav-item.dropdown
                    if (user == undefined)
                        li.nav-item
                            a.nav-link.active(href="/login") Login
                        li.nav-item
                            a.nav-link.active(href="/signup") Signup
                    else 
                        a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
                            = user.username
                        ul.dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
                            li
                                a.dropdown-item(href='/profile') Profile
                            li
                                hr.dropdown-divider
                            li
                                a.dropdown-item(href='/logout') Logout

